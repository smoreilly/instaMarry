<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="0dp"
    android:layout_height="400dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_profile_picture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/card_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_profile_picture"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:textColor="@color/AccentColor"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_profile_picture"
            android:layout_below="@+id/card_user_name"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_profile_picture"
            android:layout_margin="2dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/AccentColor"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/card_title"
            android:layout_margin="2dp"
            />

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/card_description"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>